pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh "docker build -t node-app:latest ."
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
                // start container
                sh 'docker run -d -p 3000:3000 --name node-app node-app:latest'
                // run tests
                sh 'docker exec -it node-app sh -c "npm test"'
                // stop and remove container
                sh 'docker stop node-app'
                sh 'docker rm node-app'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}