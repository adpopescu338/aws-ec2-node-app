pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh "docker build -t node-app ."
                sh "docker tag node-app:latest"
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'docker run node-app npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}