pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh "docker build -t node-app:latest ."
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'docker run -d node-app npm test'
                // stop and remove container
                sh 'docker stop node-app'
                sh 'docker rm node-app'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}