pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh "docker build -t node-app ."
                sh "docker tag node-app:latest"
            }
        }

        stage('Test') {
         docker.image('node-app:latest').withRun('-d=true') {c ->
            docker.image('node-app:latest').inside{
               sh "ls"
               sh "npm test"
            }
        }
        }
                
 
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}